#!/bin/bash

if [ -z "$TOX_ENV" ]; then
    tox | sed -u "s|${IHRPI_URL}|IHRPI_URL|g" | sed -u "s|${IHRPI_HOST}|IHRPI_HOST|g" | sed -u "s|${IHRPI_PASS}|IHRPI_PASS|g"
else
    tox -e ${TOX_ENV} | sed -u "s|${IHRPI_URL}|IHRPI_URL|g" | sed -u "s|${IHRPI_HOST}|IHRPI_HOST|g" | sed -u "s|${IHRPI_PASS}|IHRPI_PASS|g"
fi 

run_status=$?
exit ${run_status}
